<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/ed_content"
            android:layout_width="match_parent"
            android:layout_height="278px"
            android:background="@color/white"
            android:hint="请输入报警内容..."
            android:textSize="14sp"
            android:paddingLeft="78px"
            android:paddingRight="60px"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_shane">
        </View>

        <RelativeLayout
            android:id="@+id/rl_take_photo"
            android:layout_width="match_parent"
            android:layout_height="248px"
            android:background="@color/white"
            android:paddingLeft="78px" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上传照片"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:textColor="@color/text_black"/>

            <ImageView
                android:id="@+id/im_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_zp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="100px"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_jt"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40px"
                android:id="@+id/imageView8" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_shane">
        </View>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_shane">
        </View>

        <RelativeLayout
            android:id="@+id/rl_uply"
            android:layout_width="match_parent"
            android:layout_height="248px"
            android:background="@color/white"
            android:paddingLeft="78px" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上传录音"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:textColor="@color/text_black"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_ly"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="100px"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_jt"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40px"
                />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_shane">
        </View>

        <RelativeLayout
            android:id="@+id/rl_upsp"
            android:layout_width="match_parent"
            android:layout_height="248px"
            android:background="@color/white"
            android:paddingLeft="78px" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上传视频"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:textColor="@color/text_black"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_lx"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="100px"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_jt"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40px"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_shane">
        </View>

        <Button
            android:id="@+id/bt_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon_an"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="61px"
            android:text="提交报案信息"
            android:textColor="@color/white"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/bt_jijin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon_an"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="61px"
            android:text="案件紧急我需要急速报警"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </LinearLayout>
</ScrollView>