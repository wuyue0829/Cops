<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_shane"
    android:orientation="vertical">
    <RelativeLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="50px">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/pic_bj"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90px"
            android:id="@+id/rl_onekey">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_aj"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="温馨提示：为了提高您的报警处理效率，请授予GPS权限！"
            android:layout_below="@+id/rl_onekey"
            android:layout_marginTop="64px"
            android:textSize="12sp"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>


    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_shane">
    </View>

    <TextView
        android:id="@+id/tv_none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂无报警记录"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:textColor="#5fc1ab"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginTop="5dp"
        android:background="@color/white">
        <LinearLayout
            android:id="@+id/ly_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>
</LinearLayout>